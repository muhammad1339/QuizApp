<?xml version="1.0" encoding="utf-8" ?><?namespace     xmlns:app="http://schemas.android.com/apk/res-auto"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/questionColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="choiceStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/choiceColor</item>
        <item name="android:textSize">16sp</item>
        
    </style>


</resources>
